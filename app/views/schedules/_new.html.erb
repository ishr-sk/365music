<div class='container'>
  <div class='row'>
    <%= form_with model: schedule, url: schedules_path, local: true do |f| %>
      <div class="form-group">
        <%= f.label :title, 'title' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :body, 'memo' %>
        <%= f.text_area :body, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :start_date, 'start' %>
        <%= f.datetime_field :start_date, class: 'form-control datetime-form' %>
      </div>
      <div class="form-group">
        <%= f.label :end_date, 'end' %>
        <%= f.datetime_field :end_date, class: 'form-control datetime-form' %>
      </div>
      <div class="form-group">
        <%= f.submit 'submit', class: 'btn_7 no-underline' %>
      </div>
    <% end %>
  </div>
</div>