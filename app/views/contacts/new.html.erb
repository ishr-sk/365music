<div id="contact" class="big-bg">
  <%= render 'layouts/header' %>
    <div class='container mb-5'>
      <div class='row'>
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <div class="sub-title">
            contact
          </div>
          <p>*は入力必須項目になります。</p>
            <%= form_with model: @contact, url: confirm_path, method: :post, local: true do |f| %>
              <div class="form-group">
                <%= f.label :name, 'お名前*' %>
                <%= f.text_field :name, class: 'form-control' %>
              </div>
              
              <div class="form-group">
                <%= f.label :tel, '電話番号*' %>
                <%= f.text_field :tel, class: 'form-control' %>
              </div>
              
              <div class="form-group">
                <%= f.label :email, 'メールアドレス*' %>
                <%= f.text_field :email, class: 'form-control' %>
              </div>
              
              <div class="form-group">
                <%= f.label :subject, '件名' %>
                <%= f.text_field :subject, class: 'form-control' %>
              </div>
            
              <div class="form-group">
                <%= f.label :message, 'メッセージ*' %>
                <%= f.text_area :message, size: '8x8', class: 'form-control' %>
              </div>
              <div>
                <%= f.submit '入力内容確認', class: 'btn_5 no-underline' %>
              </div>
            <% end %>
        </div>
      </div>
    </div>
</div>