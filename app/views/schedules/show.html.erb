<div class="row">
  <table class="table table-bordered">
    <tbody>
      <tr>
        <th class="active">
          スケジュール名
        </th>
        <td>
          <%= @schedule.title %>
        </td>
      </tr>
      <tr>
        <th class="active">
          スケジュール内容
        </th>
        <td>
          <%= @schedule.body %>
        </td>
      </tr>
      <tr>
        <th class="active">開始日時</th>
        <td>
          <%= @schedule.start_date.to_s(:datetime_jp) %>
        </td>
      </tr>
      <tr>
        <th class="active">終了日時</th>
        <td><%= @schedule.end_date.to_s(:datetime_jp) %></td>
      </tr>
    </tbody>
  </table>
</div>

  <% if @schedule.user == current_user %>
   <%= link_to 'スケジュール登録', new_schedule_path, class: 'btn btn-success' %>
   <%= link_to '編集', edit_schedule_path(@schedule), class: 'btn btn-primary' %>
   <%= link_to '削除', schedule_path(@schedule), method: :delete, "data-confirm" => "本当に消しますか?", class: 'btn btn-danger' %>
  <% end %>
    </div>
  </div>
</div>