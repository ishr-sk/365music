<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>user info</h2>
    <%= form_with model:@user, local:true do |f| %>
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "noimage.jpg" %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
     <div class="form-group">
        <%= f.label :image %>
        <%= f.attachment_field :profile_image, class: "form-control-file" %>
      </div>
      <div class="form-group">
        <%= f.label :introduction %>
        <%= f.text_area :introduction, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :favorite_artist %>
        <%= f.text_area :artist, class: "form-control" %>
      </div>
      <div class="form-group" ontouchstart="">
        <%= f.submit 'update', class: 'reset button-circle color1' %>
      </div>
    <% end %>
  </div>
</div>
<% if user_signed_in? && @user.id == current_user.id %>
<%= link_to "退会する",unsubscribe_path, class: "btn btn-danger" %>
<% end %>
