<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h4>お問い合わせ内容</h4>
        <%= form_with model: @contact do |f| %>
          <table class="table">
            <tr>
              <th>お名前</th>
              <td>
                <%= f.hidden_field :name %>
                <%= @contact.name %>
              </td>
            </tr>
            <tr>
              <th>電話番号</th>
              <td>
                <%= f.hidden_field :tel %>
                <%= @contact.tel %>
              </td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td>
                <%= f.hidden_field :email %>
                <%= @contact.email %>
              </td>
            </tr>
            <tr>
              <th>件名</th>
              <td>
                <%= f.hidden_field :subject %>
                <%= @contact.subject %>
              </td>
            </tr>
            <tr>
              <th>お問い合わせ内容</th>
              <td>
                <%= f.hidden_field :message %>
                <%= simple_format(@contact.message) %>
              </td>
            </tr>
          </table>
          <%= f.submit '送信', :class => 'btn btn-primary' %>
        <% end %>
        <%= form_with model: @contact, url: back_path do |f| %>
          <%= f.hidden_field :name %>
          <%= f.hidden_field :tel %>
          <%= f.hidden_field :email %>
          <%= f.hidden_field :subject %>
          <%= f.hidden_field :message %>
          <div><%= f.submit '入力画面に戻る' %></div>
        <% end %>
    </div>
  </div>
</div>