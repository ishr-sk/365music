<% setlists.each do |setlist| %>
  <article class="setlist-body">
  	<figure>
  		<%= image_tag('sample1.jpg') %>
  	</figure>
  	<div class="text_content">
  		<h4 class="setlist-artist">
  		  <%= link_to setlist_path(setlist.id), class: 'no-underline setlist-link' do %>
          <%= setlist.artist %>
        <% end %>
  		</h4>
  		<ul class="setlist-menu">
  		  <li><%= setlist.event %></li>
  		  <li><%= setlist.date.strftime("%Y-%m-%d %H:%M") %></li>
  		  <li>ï¼ <%= setlist.venue %></li>
  		</ul>
  	</div>
  	<p class="read-more2"><%= link_to 'Read More', setlist_path(setlist.id), class: "no-underline" %></p>
  </article>
<% end %>
<%= paginate setlists %>