<% users.each do |user| %>
<div class="user-box">
  <div class="card-user">
    <div class="front-user">
      <div class="logo-user"><span><%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "noimage.jpg", class: "mr-3 align-self-start rounded-circle" %></span></div>
    </div>
    <div class="back-user">
      <div class="user-name">
        <%= link_to user_path(user.id) do %>
          <b><i class="fas fa-at"><%= user.name %></i></b>
        <% end %>
        <span>favorite artist<i class="fas fa-headphones-alt"></i><%= user.artist %></span>
        <h6><%= user.introduction %></h6>
      </div>
      <ul class="user-link">
        <!--DM機能ボタン実装（相互のみ表示される）-->
        <% unless user.id == current_user.id %>
          <% if (current_user.followed_by? user) && (user.followed_by? current_user) %>
            <% if current_user != user %>
              <%= link_to '', direct_message_path(user.id), class: "btn far fa-envelope btn-lg" %>
            <% end %>
          <% end %>
        <% end %>
        <% if current_user != user %>
          <% if user.followed_by?(current_user) %>
            <%= link_to "フォロー中", user_relationships_path(user.id), method: :delete, class: "btn btn-outline-dark btn-sm mr-2" %>
          <% else %>
            <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-info btn-sm mr-2" %>
          <% end %>
        <% end %>
      </ul>
    </div>
    </div>
  </div>
<% end %>