<h1>Users#フォロワー</h1>
  <% if @users.exists? %>
    <% @users.each do |user| %>
      <div class="card" style="width: 35rem;">
        <div class="media">
          <%= link_to user_path(user.id) do %>
            <%= attachment_image_tag user, :profile_image, :fill, 80, 80, fallback: "noimage.jpg", class: "mr-3 align-self-start rounded-circle" %>
          <% end %>
          <div class="media-body">
            <div class="box mt-2">
              <%= link_to user_path(user.id) do %>
                <b><i class="fas fa-at"><%= user.name %></i></b>
              <% end %>
              フォロー数： <%= user.followings.count %>
              フォロワー数： <%= user.followers.count %>
              <% if current_user != user %>
                <% if user.followed_by?(current_user) %>
                  <%= link_to "フォロー中", user_relationships_path(user.id), method: :delete, class: "btn btn-outline-dark btn-sm mr-2" %>
                <% else %>
                  <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-info btn-sm mr-2" %>
                <% end %>
              <% end %>
            </div>
              <small class="text-dark">favorite artist<i class="fas fa-headphones-alt"></i><%= user.artist %></small></br>
              <i><%= user.introduction %></i>
          </div>
        </div>
      </div>
    <% end %>
<% else %>
  <p>まだフォロワーがいません</p>
<% end %>