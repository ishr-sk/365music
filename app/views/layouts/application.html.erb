<!DOCTYPE html>
<html>
  <head>
    <%= favicon_link_tag('favicon.png') %>
    <title>365music</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
