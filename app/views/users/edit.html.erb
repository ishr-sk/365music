<div id="user-header" class="big-bg">
  <%= render 'layouts/header' %>
</div>
<div class="sub-title">
  <span class="title">user info</span>
</div>

<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <%= form_with model:@user, local:true do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
     <div class="form-group">
        <%= f.label :image %>
        <%= f.attachment_field :profile_image, class: "form-control-file" %>
      </div>
      <div class="form-group">
        <%= f.label :introduction %>
        <%= f.text_area :introduction, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :favorite_artist %>
        <%= f.text_area :artist, class: "form-control" %>
      </div>
      <div class="row justify-content-center">
        <div class="btn-group">
          <section class="post-new">
            <%= f.submit 'up date', class: 'btn_5 no-underline' %>
          </section>
    <% end %>
          <% if user_signed_in? && @user.id == current_user.id %>
            <%= link_to "退会する",unsubscribe_path, class: "btn_6 no-underline ml-3 mb-5" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>